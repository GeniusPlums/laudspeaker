{
  "name": "laudspeaker",
  "version": "0.1.0",
  "description": "Open Source Omni-Channel Triggered Messaging",
  "main": "index.js",
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/tests"
  ],
  "scripts": {
    "test": "concurrently 'npm run test:client' 'npm run test:server'",
    "test:client": "npm run test -w packages/client",
    "test:server": "npm run test -w packages/server",
    "test:e2e": "concurrently 'npm run test:client' 'npm run test:server'",
    "test:e2e:client": "npm run test:e2e -w packages/client",
    "test:e2e:server": "npm run test -w packages/server",
    "test:run": "npm run cypress:run:single -w packages/tests -- cypress/e2e/${npm_config_num}*",
    "tests:run": "npm run cypress:run -w packages/tests",
    "tests:open": "npm run cypress:open -w packages/tests",
    "lint": "concurrently 'npm run lint:client' 'npm run lint:server'",
    "lint:client": "npm run lint -w packages/client",
    "lint:server": "npm run lint -w packages/server",
    "lint:fix": "concurrently 'npm run lint:fix:client' 'npm run lint:fix:server'",
    "lint:fix:client": "npm run lint:fix -w packages/client",
    "lint:fix:server": "npm run lint:fix -w packages/server",
    "format": "concurrently 'npm run format:client' 'npm run format:server'",
    "format:client": "npm run format -w packages/client",
    "format:server": "npm run format -w packages/server",
    "build": "NODE_OPTIONS=--max_old_space_size=4096 npm run clean && npm run build:server && npm run build:client",
    "build:client": "NODE_OPTIONS=--max_old_space_size=4096 cd packages/client && npm run build",
    "build:client:sourcemaps": "npm run sentry:sourcemaps -w packages/client",
    "build:server": "cd packages/server && npm run build",
    "build:server:sourcemaps": "npm run sentry:sourcemaps -w packages/server",
    "clean": "rm -rf packages/*/dist packages/*/build",
    "preinstall": "npm run clean && npx update-browserslist-db@latest || true",
    "start": "concurrently 'npm run start:client' 'npm run start:server'",
    "start:client": "npm run start -w packages/client",
    "start:client:ci": "npm run start:ci -w packages/client",
    "start:server": "npm run start:dev -w packages/server",
    "start:prod": "node packages/server/dist/src/main.js",
    "deploy:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "logs:prod": "docker-compose -f docker-compose.prod.yml logs -f",
    "clickhouse:migrations": "clickhouse-migrations migrate --host localhost --port 8123 --user default --password '' --db default --migrations-home packages/server/src/migrations/clickhouse",
    "migrations": "npm run clickhouse:migrations && npm run typeorm:run -w packages/server"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^7.4.0",
    "foreman": "^3.0.1",
    "logform": "^2.4.2",
    "luxon": "^3.2.1",
    "p-map": "^5.5.0",
    "taskforce-connector": "^1.24.3"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  }
}